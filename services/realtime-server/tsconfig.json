{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@concept-karaoke/realtime-shared": ["../packages/realtime-shared/src/index.ts"],
      "@concept-karaoke/realtime-shared/*": ["../packages/realtime-shared/src/*"]
    }
  },
  "include": ["src/**/*"]
}
